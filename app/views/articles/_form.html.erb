<%= javascript_include_tag :ckeditor %>
<%= semantic_form_for @article do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :label => "Назва:" %>
    <%= f.input :content, :input_html => {:class => 'ckeditor'}, :label => "Текст статті", :required => false %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
