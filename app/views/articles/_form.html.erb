<%= javascript_include_tag :ckeditor %>
<%= semantic_form_for @article do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :label => "Назва:" %>
    <%= f.input :content, :label => "Текст статті", :input_html => {:class => 'ckeditor'} %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button :label => "Створити"%>
  <% end %>
<% end %>
